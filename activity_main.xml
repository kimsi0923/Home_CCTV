<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/wv_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"></WebView>

    <Button
        android:id="@+id/ip_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="ip설정" />

    <Button
        android:id="@+id/on_btn"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/ip_btn"
        android:layout_alignLeft="@id/ip_btn"
        android:text="방범 ON" />

    <Button
        android:id="@+id/off_btn"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/ip_btn"
        android:layout_alignRight="@id/ip_btn"
        android:text="방범 OFF" />

    <Button
        android:id="@+id/left_btn"
        android:layout_width="205dp"
        android:layout_height="match_parent"
        android:layout_above="@id/on_btn"
        android:layout_below="@id/wv_stream"
        android:layout_alignParentLeft="true"
        android:background="#00FFFFFF"
        android:text="LEFT" />

    <Button
        android:id="@+id/right_btn"
        android:layout_width="205dp"
        android:layout_height="match_parent"
        android:layout_above="@id/off_btn"
        android:layout_below="@id/wv_stream"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:background="#00FFFFFF"
        android:text="RIGHT" />

</RelativeLayout>
